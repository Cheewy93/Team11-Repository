package b;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.ejb.LocalBean;
import javax.ejb.Stateless;
import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;

import model.User;

/**
 * Session Bean implementation class Stat
 */
@Stateless
@LocalBean
public class Stat implements StatRemote {
	@PersistenceContext
	EntityManager em;
	
	public boolean register() throws ParseException{
		try {
			SimpleDateFormat df = new SimpleDateFormat("yyyy-MM-dd");
			Date dat = df.parse("1970-11-15");
			User u = new User();
			u.setBirthDate(dat);
			u.setEmail("pera@hotmail.com");
			u.setRoleId(1);
			u.setUsername("admin");
			u.setName("Petar");
			u.setLastName("Mihajlovic");
			u.setPassword("admin");
			u.setPassword("065 345 2958");
			em.persist(u);
			return true;
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			return false;
		}
	}
    /**
     * Default constructor. 
     */
    public Stat() {
        // TODO Auto-generated constructor stub
    }

}
